   printf("\t\t\t\t\t\t\t\t\t\t\t\tSCORE IN THIS LEVEL : *%d*\n",k);
   printf("\t\t\t\t\t\t\t\t\t\t\t\t.............................\n\n");
}

   printf("\n\n******************************");
   printf("\n******************************\n\n");
   printf("\nTOTAL SCORE %d\n\nHARD LEVEL \n",j);
   printf("\n\n*******************************");
   printf("\n*******************************\n\n");
for(d=0;d<10;d++){
   printf("\t\t\t\tRANGE : 0 to %d\n\n",b);
